@model TheEmployeeAPI.UpdateEmployeeRequest
@{
    ViewData["Title"] = "Modifier l'employé";
    var employee = ViewBag.Employee;
}

<!-- Page Header -->
<div class="bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-gray-200">
    <div class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Modifier @employee?.FirstName @employee?.LastName</h1>
                <p class="mt-2 text-gray-600">Modifiez les informations de l'employé</p>
            </div>
            <a asp-action="Details" asp-route-id="@employee?.Id" class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-900 hover:bg-gray-200 focus:ring-gray-500 font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 border border-gray-300 px-4 py-2.5 text-sm rounded-lg">
                <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i>
                Retour aux détails
            </a>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    @await Html.PartialAsync("_AlertMessage")
    
    <form asp-action="Edit" asp-route-id="@employee?.Id" method="post" class="space-y-8">
        <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 border border-red-200 rounded-md text-red-700"></div>
        
        <!-- Employee Info (Read-only) -->
        <div class="bg-gray-100 border border-gray-300 rounded-xl p-6 shadow-sm">
            <div class="mb-4 pb-3 border-b border-gray-300">
                <h3 class="text-lg font-semibold text-gray-700">Informations de l'employé</h3>
                <p class="mt-1 text-sm text-gray-500">Ces informations ne peuvent pas être modifiées</p>
            </div>
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                <div>
                    <span class="text-sm font-medium text-gray-600">Prénom:</span>
                    <span class="ml-2 text-sm text-gray-800">@employee?.FirstName</span>
                </div>
                <div>
                    <span class="text-sm font-medium text-gray-600">Nom:</span>
                    <span class="ml-2 text-sm text-gray-800">@employee?.LastName</span>
                </div>
                @if (!string.IsNullOrEmpty(employee?.SocialSecurityNumber))
                {
                    <div class="sm:col-span-2">
                        <span class="text-sm font-medium text-gray-600">NSS:</span>
                        <span class="ml-2 text-sm text-gray-800">@employee?.SocialSecurityNumber</span>
                    </div>
                }
            </div>
        </div>

        <!-- Contact Info -->
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
            <div class="mb-6 pb-4 border-b border-gray-100">
                <h3 class="text-lg font-semibold text-gray-900">Informations de contact</h3>
                <p class="mt-1 text-sm text-gray-600">Comment contacter cet employé</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label asp-for="Email" class="block text-sm font-medium text-gray-900">Email</label>
                    <input asp-for="Email" type="email" placeholder="exemple@entreprise.com" 
                           class="block w-full rounded-lg border-gray-300 bg-white px-3 py-2.5 text-gray-900 placeholder-gray-400 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 sm:text-sm transition-all duration-200 hover:border-gray-400" />
                    <span asp-validation-for="Email" class="text-sm text-red-600"></span>
                </div>
                
                <div class="space-y-2">
                    <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-900">Téléphone</label>
                    <input asp-for="PhoneNumber" type="tel" placeholder="+33 1 23 45 67 89" 
                           class="block w-full rounded-lg border-gray-300 bg-white px-3 py-2.5 text-gray-900 placeholder-gray-400 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 sm:text-sm transition-all duration-200 hover:border-gray-400" />
                    <span asp-validation-for="PhoneNumber" class="text-sm text-red-600"></span>
                </div>
            </div>
        </div>

        <!-- Address -->
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
            <div class="mb-6 pb-4 border-b border-gray-100">
                <h3 class="text-lg font-semibold text-gray-900">Adresse</h3>
                <p class="mt-1 text-sm text-gray-600">Adresse de résidence de l'employé</p>
            </div>
            
            <div class="space-y-6">
                <div class="space-y-2">
                    <label asp-for="Address1" class="block text-sm font-medium text-gray-900">Adresse ligne 1</label>
                    <input asp-for="Address1" placeholder="123 Rue Example" 
                           class="block w-full rounded-lg border-gray-300 bg-white px-3 py-2.5 text-gray-900 placeholder-gray-400 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 sm:text-sm transition-all duration-200 hover:border-gray-400" />
                    <span asp-validation-for="Address1" class="text-sm text-red-600"></span>
                </div>
                
                <div class="space-y-2">
                    <label asp-for="Address2" class="block text-sm font-medium text-gray-900">Adresse ligne 2</label>
                    <input asp-for="Address2" placeholder="Appartement, suite, etc." 
                           class="block w-full rounded-lg border-gray-300 bg-white px-3 py-2.5 text-gray-900 placeholder-gray-400 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 sm:text-sm transition-all duration-200 hover:border-gray-400" />
                    <span asp-validation-for="Address2" class="text-sm text-red-600"></span>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="space-y-2">
                        <label asp-for="City" class="block text-sm font-medium text-gray-900">Ville</label>
                        <input asp-for="City" placeholder="Paris" 
                               class="block w-full rounded-lg border-gray-300 bg-white px-3 py-2.5 text-gray-900 placeholder-gray-400 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 sm:text-sm transition-all duration-200 hover:border-gray-400" />
                        <span asp-validation-for="City" class="text-sm text-red-600"></span>
                    </div>
                    
                    <div class="space-y-2">
                        <label asp-for="State" class="block text-sm font-medium text-gray-900">État/Province</label>
                        <input asp-for="State" placeholder="Île-de-France" 
                               class="block w-full rounded-lg border-gray-300 bg-white px-3 py-2.5 text-gray-900 placeholder-gray-400 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 sm:text-sm transition-all duration-200 hover:border-gray-400" />
                        <span asp-validation-for="State" class="text-sm text-red-600"></span>
                    </div>
                    
                    <div class="space-y-2">
                        <label asp-for="ZipCode" class="block text-sm font-medium text-gray-900">Code postal</label>
                        <input asp-for="ZipCode" placeholder="75001" 
                               class="block w-full rounded-lg border-gray-300 bg-white px-3 py-2.5 text-gray-900 placeholder-gray-400 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 sm:text-sm transition-all duration-200 hover:border-gray-400" />
                        <span asp-validation-for="ZipCode" class="text-sm text-red-600"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
            <a asp-action="Details" asp-route-id="@employee?.Id" class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-900 hover:bg-gray-200 focus:ring-gray-500 font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 border border-gray-300 px-4 py-2.5 text-sm rounded-lg">
                Annuler
            </a>
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white hover:bg-blue-700 focus:ring-blue-500 shadow-sm font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 px-4 py-2.5 text-sm rounded-lg">
                <i data-lucide="edit" class="w-4 h-4 mr-2"></i>
                Sauvegarder les modifications
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}